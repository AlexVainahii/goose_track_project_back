{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@root": ["."],
      "@src": ["./src"],
      "@controllers": ["./src/controllers"],
      "@middlewares": ["src/middlewares"],
      "@routes": ["./src/routes"],
      "@services": ["src/services"],
      "@models": ["./src/models"],
      "@schemas": ["./src/schemas"],
      "@helpers": ["./src/helpers"]
    }
  },
  "include": ["src/**/*", "app.js"]
}
